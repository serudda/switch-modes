{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Model Modes Configuration",
  "description": "Configuration file for OpenClaw Model Modes skill. Copy this to your workspace as 'model-modes.json' and customize.",
  "type": "object",
  "properties": {
    "eco": {
      "type": "string",
      "description": "Cheapest model for simple tasks (summaries, quick questions, casual chat)",
      "examples": [
        "anthropic/claude-3.5-haiku",
        "openai/gpt-4o-mini"
      ],
      "default": "anthropic/claude-3.5-haiku"
    },
    "balanced": {
      "type": "string",
      "description": "Daily driver model for general work (coding, writing, problem solving)",
      "examples": [
        "anthropic/claude-sonnet-4-5",
        "openai/gpt-4o"
      ],
      "default": "anthropic/claude-sonnet-4-5"
    },
    "smart": {
      "type": "string",
      "description": "Powerful model for complex reasoning (architecture, debugging, analysis)",
      "examples": [
        "anthropic/claude-opus-4-5",
        "openai/o1"
      ],
      "default": "anthropic/claude-opus-4-5"
    },
    "max": {
      "type": "string",
      "description": "Maximum power for critical tasks (deep reasoning, important decisions)",
      "examples": [
        "anthropic/claude-opus-4-6",
        "openai/o1-pro"
      ],
      "default": "anthropic/claude-opus-4-6"
    }
  },
  "required": ["eco", "balanced", "smart", "max"],
  "additionalProperties": false,
  "examples": [
    {
      "eco": "anthropic/claude-3.5-haiku",
      "balanced": "anthropic/claude-sonnet-4-5",
      "smart": "anthropic/claude-opus-4-5",
      "max": "anthropic/claude-opus-4-6"
    },
    {
      "eco": "openai/gpt-4o-mini",
      "balanced": "openai/gpt-4o",
      "smart": "openai/o1",
      "max": "openai/o1-pro"
    },
    {
      "eco": "anthropic/claude-3.5-haiku",
      "balanced": "openai/gpt-4o",
      "smart": "anthropic/claude-opus-4-5",
      "max": "openai/o1-pro"
    }
  ]
}
